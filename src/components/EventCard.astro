---
interface Props {
    icon: string;
    title: string;
    description?: string;
    includes?: string[];
    detailed?: boolean;
}

const {
    icon,
    title,
    description,
    includes = [],
    detailed = false,
} = Astro.props;
---

<div
    class={`group bg-white rounded-2xl p-8 hover:-translate-y-2 hover:shadow-2xl transition-all duration-300 ease-in-out border border-rose-100 flex flex-col h-full ${detailed ? "" : "bg-gradient-to-br from-white to-rose-50/50"}`}
>
    <div
        class="text-6xl mb-6 group-hover:scale-110 transition-transform duration-300"
    >
        {icon}
    </div>

    <h3 class="text-2xl font-display font-semibold text-gris-texte mb-3">
        {title}
    </h3>

    {
        detailed && description && (
            <div class="flex-grow">
                <p class="text-gray-600 mb-6 leading-relaxed">{description}</p>

                {includes.length > 0 && (
                    <div class="mb-6">
                        <h4 class="text-sm font-semibold text-rose-400 uppercase tracking-wide mb-3">
                            Inclus :
                        </h4>
                        <ul class="space-y-2">
                            {includes.map((item) => (
                                <li class="flex items-start gap-2 text-sm text-gray-500">
                                    <span class="bg-rose-100 text-rose-500 rounded-full p-0.5 mt-0.5">
                                        <svg
                                            class="w-3 h-3"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"
                                            />
                                        </svg>
                                    </span>
                                    {item}
                                </li>
                            ))}
                        </ul>
                    </div>
                )}

                <a
                    href="/contact?type=evenement"
                    class="inline-flex items-center text-rose-400 font-semibold group-hover:text-rose-500 transition-colors"
                >
                    En savoir plus
                    <svg
                        class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"
                        />
                    </svg>
                </a>
            </div>
        )
    }
</div>
