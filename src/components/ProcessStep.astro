---
interface Props {
    number: number;
    title: string;
    description: string;
}

const { number, title, description } = Astro.props;
---

<div class="relative flex flex-col items-center text-center group">
    <!-- Connector Line (hidden on mobile for last item, hidden on desktop for last item) -->
    <div
        class="hidden md:block absolute top-8 left-1/2 w-full h-0.5 border-t-2 border-dashed border-rose-200 -z-10 opacity-50 last:hidden"
    >
    </div>

    <div class="mb-6 relative">
        <div
            class="w-16 h-16 bg-gradient-to-br from-rose-poudre to-corail-warmth rounded-full flex items-center justify-center text-white text-2xl font-bold shadow-lg group-hover:scale-110 transition-transform duration-300"
        >
            {number}
        </div>
        <div
            class="absolute -inset-2 bg-rose-100 rounded-full -z-10 opacity-0 group-hover:opacity-50 transition-all duration-500 blur-md"
        >
        </div>
    </div>

    <h3 class="text-xl font-display font-semibold text-gris-texte mb-3">
        {title}
    </h3>
    <p class="text-gray-600 leading-relaxed max-w-xs mx-auto">
        {description}
    </p>
</div>
