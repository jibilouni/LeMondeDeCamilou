---
// Header component with sticky navigation and dropdown menu
const pathname = Astro.url.pathname;

const isLinkActive = (path: string) => {
    if (path === "/") return pathname === "/";
    return pathname.startsWith(path);
};
---

<header
    class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-rose-200/50 shadow-sm hover:shadow-lg transition-all duration-300"
>
    <nav class="container mx-auto px-4 lg:px-8">
        <div class="flex items-center justify-between h-24">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2 group">
                <span class="text-3xl font-display">
                    <span class="text-gris-texte">Le Monde de</span>
                    <span
                        class="bg-gradient-to-r from-rose-poudre via-rose-poudre-light to-corail-warmth bg-clip-text text-transparent font-bold ml-2"
                        >Camilou</span
                    >
                </span>
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden lg:flex items-center gap-10">
                <a
                    href="/"
                    class={`text-lg transition-colors duration-300 font-medium ${isLinkActive("/") && pathname === "/" ? "text-rose-poudre border-b-2 border-corail-warmth" : "text-gris-texte hover:text-rose-poudre"}`}
                >
                    Accueil
                </a>
                <a
                    href="/evenements"
                    class={`text-lg transition-colors duration-300 font-medium ${pathname === "/evenements" ? "text-rose-poudre border-b-2 border-corail-warmth" : "text-gris-texte hover:text-rose-poudre"}`}
                >
                    Événements
                </a>

                <!-- Services Dropdown -->
                <div class="relative group">
                    <button
                        class={`text-lg transition-colors duration-300 font-medium flex items-center gap-1 ${isLinkActive("/services") ? "text-rose-poudre" : "text-gris-texte hover:text-rose-poudre"}`}
                    >
                        Services Bien-être
                        <svg
                            class="w-4 h-4 transition-transform group-hover:rotate-180 duration-300"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>

                    <!-- Dropdown Menu -->
                    <div
                        class="absolute top-full left-0 mt-2 w-72 bg-white rounded-xl shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 border border-rose-100 overflow-hidden"
                    >
                        <div class="p-2">
                            <a
                                href="/services#yoga"
                                class="block px-4 py-3 rounded-lg hover:bg-gradient-to-r hover:from-rose-50 hover:to-peche-light/50 transition-all duration-300"
                            >
                                <p class="font-semibold text-gris-texte">
                                    Yoga
                                </p>
                                <p class="text-sm text-gray-500">
                                    3 cours par semaine
                                </p>
                            </a>
                            <a
                                href="/services#onglerie"
                                class="block px-4 py-3 rounded-lg hover:bg-gradient-to-r hover:from-rose-50 hover:to-peche-light/50 transition-all duration-300"
                            >
                                <p class="font-semibold text-gris-texte">
                                    Prothésiste Ongulaire
                                </p>
                                <p class="text-sm text-gray-500">
                                    Sur rendez-vous
                                </p>
                            </a>
                            <a
                                href="/services#esthetique"
                                class="block px-4 py-3 rounded-lg hover:bg-gradient-to-r hover:from-rose-50 hover:to-peche-light/50 transition-all duration-300"
                            >
                                <p class="font-semibold text-gris-texte">
                                    Esthéticienne
                                </p>
                                <p class="text-sm text-gray-500">
                                    Épilation & soins
                                </p>
                            </a>
                        </div>
                    </div>
                </div>

                <a
                    href="/blog"
                    class={`text-lg transition-colors duration-300 font-medium ${isLinkActive("/blog") ? "text-rose-poudre border-b-2 border-corail-warmth" : "text-gris-texte hover:text-rose-poudre"}`}
                >
                    Blog
                </a>
                <a
                    href="/contact"
                    class={`text-lg transition-colors duration-300 font-medium ${isLinkActive("/contact") ? "text-rose-poudre border-b-2 border-corail-warmth" : "text-gris-texte hover:text-rose-poudre"}`}
                >
                    Contact
                </a>

                <!-- CTA Button -->
                <a
                    href="/contact?type=devis"
                    class="bg-gradient-cta text-white px-8 py-3 rounded-full font-semibold hover:scale-105 hover:shadow-2xl transition-all duration-300 flex items-center gap-2 shadow-lg"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path>
                    </svg>
                    Réserver
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="lg:hidden text-gris-texte p-2 hover:bg-rose-50 rounded-lg transition-colors"
                aria-label="Menu mobile"
            >
                <svg
                    class="w-8 h-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </nav>

    <!-- Mobile Menu Overlay -->
    <div
        id="mobile-menu"
        class="fixed inset-0 bg-white/98 backdrop-blur-lg z-50 lg:hidden opacity-0 invisible transition-all duration-300 overflow-y-auto"
    >
        <div class="container mx-auto px-4 py-6">
            <div class="flex justify-between items-center mb-8 h-20">
                <span
                    class="text-2xl font-display font-bold bg-gradient-to-r from-rose-poudre to-corail-warmth bg-clip-text text-transparent"
                >
                    Le Monde de Camilou
                </span>
                <button
                    id="mobile-menu-close"
                    class="text-gris-texte p-2 hover:bg-rose-50 rounded-lg transition-colors"
                    aria-label="Fermer menu"
                >
                    <svg
                        class="w-8 h-8"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <nav class="flex flex-col gap-2">
                <a
                    href="/"
                    class={`text-xl font-medium p-4 rounded-xl transition-all ${pathname === "/" ? "bg-rose-50 text-rose-500" : "text-gris-texte hover:bg-gray-50"}`}
                >
                    Accueil
                </a>
                <a
                    href="/evenements"
                    class={`text-xl font-medium p-4 rounded-xl transition-all ${pathname === "/evenements" ? "bg-rose-50 text-rose-500" : "text-gris-texte hover:bg-gray-50"}`}
                >
                    Événements
                </a>
                <a
                    href="/services"
                    class={`text-xl font-medium p-4 rounded-xl transition-all ${pathname === "/services" ? "bg-rose-50 text-rose-500" : "text-gris-texte hover:bg-gray-50"}`}
                >
                    Services Bien-être
                </a>
                <a
                    href="/blog"
                    class={`text-xl font-medium p-4 rounded-xl transition-all ${pathname === "/blog" ? "bg-rose-50 text-rose-500" : "text-gris-texte hover:bg-gray-50"}`}
                >
                    Blog
                </a>
                <a
                    href="/contact"
                    class={`text-xl font-medium p-4 rounded-xl transition-all ${pathname === "/contact" ? "bg-rose-50 text-rose-500" : "text-gris-texte hover:bg-gray-50"}`}
                >
                    Contact
                </a>

                <a
                    href="/contact?type=devis"
                    class="mt-6 bg-gradient-cta text-white px-6 py-4 rounded-full font-semibold text-center hover:scale-105 transition-all duration-300 flex items-center justify-center gap-2 shadow-lg"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path>
                    </svg>
                    Demander un devis
                </a>
            </nav>
        </div>
    </div>
</header>

<script>
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenuClose = document.getElementById("mobile-menu-close");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuBtn?.addEventListener("click", () => {
        mobileMenu?.classList.remove("opacity-0", "invisible");
        document.body.style.overflow = "hidden";
    });

    mobileMenuClose?.addEventListener("click", () => {
        mobileMenu?.classList.add("opacity-0", "invisible");
        document.body.style.overflow = "";
    });

    // Close mobile menu when clicking on a link
    const mobileLinks = mobileMenu?.querySelectorAll("a");
    mobileLinks?.forEach((link) => {
        link.addEventListener("click", () => {
            mobileMenu?.classList.add("opacity-0", "invisible");
            document.body.style.overflow = "";
        });
    });
</script>
