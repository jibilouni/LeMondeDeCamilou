---
import { Image } from "astro:assets";

interface Props {
    image: ImageMetadata;
    title: string;
    subtitle: string;
    highlight: string;
    description: string;
}

const { image, title, subtitle, highlight, description } = Astro.props;
---

<div
    class="group bg-white rounded-2xl overflow-hidden hover:-translate-y-2 hover:shadow-2xl transition-all duration-300 ease-in-out border border-rose-100"
>
    <!-- Image -->
    <div class="relative aspect-video overflow-hidden">
        <Image
            src={image}
            alt={title}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
        />
    </div>

    <!-- Content -->
    <div class="p-6">
        <h3 class="text-2xl font-display font-semibold text-gris-texte mb-2">
            {title}
        </h3>
        <p class="text-sm text-gray-500 mb-2">{subtitle}</p>
        <p class="text-corail-warmth font-semibold mb-3">{highlight}</p>
        <p class="text-gray-600 leading-relaxed">
            {description}
        </p>
    </div>
</div>
