---
interface Props {
    question: string;
    answer: string;
}

const { question, answer } = Astro.props;
---

<details
    class="group bg-white rounded-xl overflow-hidden border-2 border-rose-50 hover:border-rose-100 transition-colors duration-300"
>
    <summary
        class="flex items-center justify-between p-6 cursor-pointer list-none text-lg font-medium text-gris-texte marker:hidden"
    >
        <span>{question}</span>
        <span
            class="bg-rose-50 text-rose-400 rounded-full p-2 transition-transform duration-300 group-open:rotate-180"
        >
            <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"></path></svg
            >
        </span>
    </summary>
    <div
        class="px-6 pb-6 pt-0 text-gray-600 leading-relaxed border-t border-transparent group-open:border-rose-50 transition-all"
    >
        <p>{answer}</p>
    </div>
</details>

<style>
    /* Removing default arrow for webkit details */
    details > summary::-webkit-details-marker {
        display: none;
    }
</style>
